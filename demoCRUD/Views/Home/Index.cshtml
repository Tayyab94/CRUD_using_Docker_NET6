@model IEnumerable<demoCRUD.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <table class="table table-responsive table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var d in Model)
                {
                    <tr>
                        <td>@d.Id</td>
                        <td>@d.Name</td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
</div>
